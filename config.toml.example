[storage]
data = "rocksdb"
fts = "rocksdb"
blob = "rocksdb"
lookup = "rocksdb"
directory = "kc"

[store."rocksdb"]
type = "rocksdb"
path = "%{env:MAIL_STALWART_PATH}%/data"
compression = "lz4"

[directory."internal"]
type = "internal"
store = "rocksdb"

[directory."kc"]
auth.method = "basic"
auth.secret = "Kfo2GJdGs2ItfiTgGPahXpT3yTKUlYOj"
auth.username = "stalwart"
bind.auth.method = "default"
